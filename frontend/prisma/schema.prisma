generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  surname   String?
}

model Service {
  id            String   @id @default(uuid())
  order         Int
  titleEn       String   @map("title_en")
  titleAr       String   @map("title_ar")
  descriptionEn String   @map("description_en")
  descriptionAr String   @map("description_ar")
  published     Boolean  @default(true)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")
  type          String   @default("Other")

  @@map("services")
}

model Project {
  id            String   @id @default(uuid())
  order         Int
  imageUrl      String   @map("image_url")
  categoryEn    String   @map("category_en")
  categoryAr    String   @map("category_ar")
  titleEn       String   @map("title_en")
  titleAr       String   @map("title_ar")
  descriptionEn String   @map("description_en")
  descriptionAr String   @map("description_ar")
  featured      Boolean  @default(false)
  published     Boolean  @default(true)
  status        String   @default("past")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("projects")
}

model Testimonial {
  id        String   @id @default(uuid())
  order     Int
  quoteEn   String   @map("quote_en")
  quoteAr   String   @map("quote_ar")
  authorEn  String   @map("author_en")
  authorAr  String   @map("author_ar")
  roleEn    String   @map("role_en")
  roleAr    String   @map("role_ar")
  rating    Int      @default(5)
  published Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("testimonials")
}

model PlatformUpdate {
  id        String   @id @default(uuid())
  order     Int      @default(0)
  type      String   @default("news")
  titleEn   String   @map("title_en")
  titleAr   String   @map("title_ar")
  summaryEn String   @map("summary_en")
  summaryAr String   @map("summary_ar")
  date      DateTime @default(now())
  published Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("platform_updates")
}

model Industry {
  id            String   @id @default(uuid())
  order         Int
  titleEn       String   @map("title_en")
  titleAr       String   @map("title_ar")
  descriptionEn String   @map("description_en")
  descriptionAr String   @map("description_ar")
  published     Boolean  @default(true)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("industries")
}

model Solution {
  id            String   @id @default(uuid())
  order         Int
  iconName      String   @map("icon_name")
  titleEn       String   @map("title_en")
  titleAr       String   @map("title_ar")
  descriptionEn String   @map("description_en")
  descriptionAr String   @map("description_ar")
  published     Boolean  @default(true)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("solutions")
}

model TeamMember {
  id            String   @id @default(uuid())
  order         Int
  nameEn        String   @map("name_en")
  nameAr        String   @map("name_ar")
  roleEn        String   @map("role_en")
  roleAr        String   @map("role_ar")
  bioEn         String   @map("bio_en")
  bioAr         String   @map("bio_ar")
  descriptionEn String?  @map("description_en")
  descriptionAr String?  @map("description_ar")
  imageUrl      String   @map("image_url")
  resumeUrl     String?  @map("resume_url")
  published     Boolean  @default(true)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")
  portfolioUrl  String?  @map("portfolio_url")

  @@map("our_team")
}


model Consultation {
  id        String   @id @default(uuid())
  name      String
  email     String
  company   String?
  message   String
  status    String   @default("pending")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("consultations")
}
